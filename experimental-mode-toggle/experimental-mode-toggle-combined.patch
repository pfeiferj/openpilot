+
+    if self.button_transition_id != transition_id:
+      self.button_transition_id = transition_id
+      if gap_adjust_button.simple_state == GapButtonState.LONG_PRESS:
+        if load_state:
+          self.load_state()
+
+        self.state = not self.state
+
+        if write_state:
+          self.write_state()
+
